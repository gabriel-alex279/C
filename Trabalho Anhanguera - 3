# include <stdio.h>

 // GABRIEL ALEXANDRE
 
int main () {
    printf("\n");
    printf("~~~~~~DADOS DE VENDAS DIÁRIAS~~~~~~");
    printf("\n");
    int soma = 0;
    int dit = 0;
    int números[5] = {};
    printf("\n");
    for (int i = 0;i < 5;i++) {
    printf("Qual foi a quantidade de vendas no %d° dia? ",i+1);
    scanf("%d", &dit);
    números[i] = dit;
    soma = soma + dit;
    }
    printf("\n");
    printf("Essa é a quantidade de vendas realizadas em cada dia: ");
    printf("\n");
    for (int i = 0;i < 5;i++) {
    printf("\n%d vendas no %d° dia", números[i], i+1);
    }
    printf("\n");
    printf("\nE a soma de todos eles é igual a: ");
    printf("%d", soma);
    return 0;
}
