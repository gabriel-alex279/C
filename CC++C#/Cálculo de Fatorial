# include <stdio.h>

 // CÁLCULO DE FATORIAL

int fatorial(int n) {
    
    int res = 1;
    for (int i=n;i > 1;i--) {
        
        res = res * i;
    }
    printf("O resultado é: %d", res);
    return res;
    
}

int main () {
    int numero = 0;
    printf("Digite um número para ver seu fatorial: ");
    scanf("%d", &numero);
    fatorial(numero);
    
    return 0;
}
