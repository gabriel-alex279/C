#include <stdio.h>

int main() {
    // Declaração de variável
    int número, resultado;

    // Exibe o cabeçalho
    printf("--------------------\n");

    // Solicita um número ao usuário
    printf("Me diga um número qualquer: ");
    scanf("%d", &número);

    // Calcula se o número é par ou ímpar
    resultado = número % 2;

    // Exibe o resultado
    if (resultado == 0) {
        printf("O resultado é PAR\n");
    } else {
        printf("O resultado é ÍMPAR\n");
    }

    // Exibe o rodapé
    printf("--------------------\n");

    return 0;
}
